<% form_tag "/report/print_films_used", :method => :post do %>

    <%= hidden_field_tag "id" , params[:id] %>
   
   <% @months = [['January','1'],['February','2'],['March','3'],['April','4'],
                 ['May','5'],['June','6'],['July','7'],['August','8'],
                 ['September','9'],['October','10'],['November','11'],['December','12']]%>
   <% @years = [''] %>
   <% Date.today.year.downto(2004) do |year| @years << year.to_s
    end%>

    <%=  select_tag :year, options_for_select(@years),
     {:helpText => "Select year", :tt_onLoad => "document.getElementById('keyboard').style.display='none'"} %>
   <%=  select_tag :month, options_for_select(@months),
     {:helpText => "Select month"} %>
    
   
<%end%>
