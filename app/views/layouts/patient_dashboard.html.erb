  <body id="container">
    <div id="dashboard">
      <div id="project_name"><span style="font-size: 0.7em">Radiology</span></div>        
      <div id="patient_name"><%=@patient.name%></div>
      <div id="patient_id"><%=@patient.national_id_with_dashes %></div> 

      <div id="patient_card">
        <div id="patient_gender" value="<%=@patient.person.sex%>" style="font-size: 0.4em">Gender</div>
