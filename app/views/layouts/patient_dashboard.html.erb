        <option value = ''>Report</option>
      </select>
      
        
      <select id="links">
        <option value="/investigation/new/<%=@patient.id%>">Investigation</option>
        <option value="/film/size/<%=@patient.id%>">Film Sizes</option>
        <option value="#">Report</option>
