    <style type="text/css">
      .personal-details-label {
        font-weight: bold;
      }

      #personal-details {
        font-size: 1em;
        height: 195px;
        max-width: 720px;
        margin: 5px;
        overflow: auto;
      }

      #menu {
        float: right;
        height: 680px;
        overflow: auto;
        width: 253px;
        border: thin solid #EEEEEE;
        margin-right: 5px;
        margin-top: 5px;
      }

      .menu-button {
        width: 245px;
      }

      #visit-summary {
        background: none repeat scroll 0 0 white;
        margin-top: 10px;
        float: left;
        height: 236px;
        width: 276px;
      }

      #btnCancel , #btnNext {
        margin-top: 10px;
        min-width: 140px;
      }
